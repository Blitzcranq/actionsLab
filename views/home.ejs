<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Management</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    <div class="container">
        <h1>Course List</h1>
        <table>
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% courseList.forEach(course => { %>
                    <tr>
                        <td><%= course.code %></td>
                        <td><%= course.title %></td>
                        <td>
                            <form action="/delete/<%= course.code %>" method="POST" style="display:inline;">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/add">Add New Course</a>
        <a href="/search">Search Courses</a>
    </div>
    <%- include('partials/footer') %>
</body>
</html>